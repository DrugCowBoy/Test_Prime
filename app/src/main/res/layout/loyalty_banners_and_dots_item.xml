<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_banners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:overScrollMode="never"
        android:isScrollContainer="false"
        tools:listitem="@layout/banner_item"
        tools:itemCount="1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:paddingBottom="25dp"
        app:layout_constraintEnd_toEndOf="@id/recycler_banners"
        app:layout_constraintStart_toStartOf="@id/recycler_banners"
        app:layout_constraintTop_toBottomOf="@id/recycler_banners"
        tools:listitem="@layout/dot_item"
        tools:itemCount="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>